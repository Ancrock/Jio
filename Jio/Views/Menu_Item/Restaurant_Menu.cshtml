@model IEnumerable<Jio.Models.Menu_Item>
@{
    ViewBag.Title = "Restaurant_Menu";
}

<h2>Restaurant_Menu</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.restaurant.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

    @foreach (var menuitem in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => menuitem.restaurant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => menuitem.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => menuitem.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => menuitem.price)
            </td>
            <td>
                @Html.ActionLink("Add To Cart", "AddToCart", "ShoppingCart", new { id = menuitem.Menu_ItemID }, null) |
            </td>
        </tr>
    }

</table>
