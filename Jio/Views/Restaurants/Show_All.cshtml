@model IEnumerable<Jio.Models.Restaurant>
<link rel="stylesheet" href="~/Content/menu.css" type="text/css">
@{
//ViewBag.Title = "Restaurants";
}

<h2>Restaurants</h2>

<p>
    @using (Html.BeginForm()){
    <p> @Html.TextBox("SearchString") <br />
        <input class="btn btn-default" type="submit" value="Search" /></p>
    }
</p>

<div id="menutable">
    <table id="mtb" border="0" width="100%" cellpadding="1">
        <tbody>

            @foreach (var menuitem in Model)
            {
                <tr class="restaurantclick">
                    <td class="" onclick="action = 'submit';">
                        <k class="k">
                            @Html.DisplayFor(modelItem => menuitem.Name)
                        </k>
                        <p>
                            @Html.DisplayFor(modelItem => menuitem.Description)
                        </p>
                        <article>
                            @Html.DisplayFor(modelItem => menuitem.Contact)
                        </article>
                        @Html.ActionLink("Select", "Restaurant_Menu", "Menu_Item", new { id = menuitem.RestaurantID, }, null) |

                    </td>
                </tr>


            }

        </tbody>
    </table>
</div>


